{
    "plugins": [
        "plugins/markdown",
        "plugins/summarize",
        "node_modules/jsdoc-mermaid",
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/category"
    ],
    "typescript": {
        "moduleRoot": "src"
    },
    "package": "package.json",
    "recurseDepth": 10,
    "source": {
        "include": [
            "./src"
        ],
        "exclude": [],
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "better-docs": {
            "name": "decorator-validation",
            "title": "Decorator Validation",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Test Results",
                    "href": "coverage"
                },
                {
                    "label": "Gitlab Repository",
                    "href": "https://github.com/decaf-ts/decorator-validation#readme"
                }
            ]
        },
        "cleverLinks": true,
        "monospaceLinks": true,
        "search": true
    },
    "opts": {
        "encoding": "utf-8",
        "template": "./node_modules/better-docs",
        "destination": "./docs/",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "tutorials": "./workdocs/tutorials"
    }
}